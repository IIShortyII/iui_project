<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboardingContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity"
    android:layout_margin="40dp">

    <FrameLayout
        android:id="@+id/fragment_container_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <Button
        android:id="@+id/nextBtnOnboarding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="nextOnboarding"
        android:text="text"
        app:layout_constraintBottom_toBottomOf="@id/onboardingContainer"
        tools:layout_editor_absoluteX="0
" />

</androidx.constraintlayout.widget.ConstraintLayout>