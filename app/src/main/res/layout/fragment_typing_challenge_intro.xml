<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/typingChallengeIntroTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/typingChallengeIntroDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/typingChallengeIntroTitle"
        android:text="@string/typingChallengeIntroDescription"
        android:textColor="#000000" />

    <Button
        android:id="@+id/startTypingChallengeBtn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="startTypingChallenge"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="0
" />

</androidx.constraintlayout.widget.ConstraintLayout>